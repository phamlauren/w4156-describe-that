<%= form_with url: video_path, method: :get do |form| %>
  <%= form.label :yt_url, "Enter YouTube URL: " %>
  <%= form.text_field :yt_url %>
  <%= form.submit "Describe" %>
<% end %>
<%= flash[:notice] %>
<h1 class="page-title">Videos with audio descriptions</h1>

<table class="table col-md-12 text-center" id="videos">
  <tbody>
    <% @videos_info.each do |video| %>
      <tr>
        <td>
          <%= link_to video["title"], "/video/#{video["id"]}", data: { turbolinks: 'false' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

