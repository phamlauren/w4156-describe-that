<h2 class="text-center page-title"><%=@yt_info["title"]%></h2>
<div id="player"></div>
<p><% @descriptions.each do |desc| %><%= desc.desc_text %>&nbsp<% end %></p>
<h3>Video Info</h3>
<%= @yt_info["description"].gsub(/\n/, '<br/>').html_safe %>
<h3>Comments</h3>

<table class="table table-striped col-md-12" id="comments">
  <thead>
    <tr>
      <th>Comment</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td>
          <%= comment["comment_text"] %>
        </td>
        <td>
          <%= comment["comment_auth_id"] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
    var tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    var player;
    function onYouTubeIframeAPIReady() {
    player = new YT.Player('player', {
        height: '390',
        width: '640',
        videoId: '<%=@video.yt_video_id%>',
    });
    }
</script>